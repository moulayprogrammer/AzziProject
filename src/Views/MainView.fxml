<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane nodeOrientation="RIGHT_TO_LEFT" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.MainController">
   <top>
      <MenuBar prefHeight="30.0" prefWidth="1280.0" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="الملف">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#close" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="قوائم">
            <items>
                <MenuItem mnemonicParsing="false" onAction="#ShowRawMaterialScreen" text="قائمة المواد الخام" />
                <MenuItem mnemonicParsing="false" onAction="#ShowMedicationScreen" text="قائمة الأدوية" />
                <MenuItem mnemonicParsing="false" onAction="#ShowProductScreen" text="قائمة المنتجات" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="المبيعات">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#ShowClientScreen" text="الزبائن" />
                  <MenuItem mnemonicParsing="false" onAction="#ShowMedicationScreen" text="بيع جديد" />
                  <MenuItem mnemonicParsing="false" onAction="#ShowProductScreen" text="تاريخ البيع" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="المشتريات">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#ShowProviderScreen" text="الموردين" />
                  <MenuItem mnemonicParsing="false" onAction="#ShowMedicationScreen" text="شراء جديد" />
                  <MenuItem mnemonicParsing="false" onAction="#ShowProductScreen" text="تاريخ الشراء" />
               </items>
            </Menu>
          <Menu mnemonicParsing="false" text="متابعة">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <BorderPane fx:id="mainPane" prefHeight="690.0" prefWidth="1280.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
